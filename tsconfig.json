{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"removeComments": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"dom",
			"es6",
			"es2016",
			"es2017"
		],
		"baseUrl": "./",
		"outDir": "./dist",
		"typeRoots": [
			"node_modules/@types"
		],
	},
	"files": [
		"./src/index.ts"
	]
}
